<Page
    x:Class="Hexapod.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hexapod"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- MainPage -->
    <StackPanel Background="RoyalBlue" Padding="50">
        <TextBlock TextWrapping="Wrap" Text="Socket" FontSize="32" FontWeight="ExtraBold" Foreground="White" />
        <TextBlock Text="HOST" Padding="0 20 0 0" />
        <TextBlock Name="HOST" Text="IP"  FontSize="23" FontWeight="ExtraBold" />
        <TextBlock Text="PORT" Padding="0 20 0 0" />
        <TextBlock Name="PORT" Text="PORT"  FontSize="23" FontWeight="ExtraBold" />
        <TextBlock Text="LOG" Padding="0 20 0 0" />
        <TextBox Name="LOG" Height="300" TextWrapping="Wrap"  />
    </StackPanel>
</Page>
